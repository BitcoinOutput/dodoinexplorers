<h1>articles#edit</h1>
<p>Find me in app/views/articles/edit.html.erb</p>

<%= form_for @article do |f| %>

    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %><br/>
    </p>    
    
    <p>
        <%= f.label :body %><br/>
        <%= f.text_area :body %><br/>
    </p>
    
    <p>
        <%= f.select :type_id, Type.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select One"} %> <br/>
    </p>
    <p>
        <%= f.submit "Update Post" %>
    </p>

<% end %>

<%= link_to "Go Back", article_path %>
